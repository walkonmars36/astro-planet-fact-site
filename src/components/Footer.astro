---
import type { DataProps } from "../interface";
const { rotation, revolution, radius, temperature } = Astro.props as DataProps;
import FooterCard from "./FooterCard.astro";
---

<footer>
  <FooterCard label="Rotation Time" value={rotation} />
  <FooterCard label="Revolution Time" value={revolution} />
  <FooterCard label="Radius" value={radius} />
  <FooterCard label="Average Temp." value={temperature} />
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    padding: var(--spacing-3);
  }

  @media (min-width: 37.5rem) {
    footer {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
