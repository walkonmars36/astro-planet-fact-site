---
const { label, value } = Astro.props;
---

<div class="footer__card">
  <div class="footer__card-items">
    <h4>{label}</h4>
    <span class="footer__card-span">{value}</span>
  </div>
</div>

<style lang="scss">
  .footer__card {
    border: 1px solid var(--under-outline);
    margin-top: var(--spacing-1);

    &-items {
      padding: 1em;
      display: flex;
      flex: 1;
      justify-content: space-between;
      align-items: center;
    }

    &-span {
      font-family: "Antonio", sans-serif;
      font-weight: 400;
      font-size: clamp(1.25rem, calc(0.55rem + 2vw), 2.5rem);
      margin: 0;
    }
  }

  h4 {
    font-size: clamp(0.625rem, 0.518rem + 0.536vw, 1rem);
    text-transform: uppercase;
    opacity: 0.5;
    letter-spacing: 0.2ch;
  }

  @media (min-width: 37.5rem) {
    .footer__card {
      &-items {
        align-items: flex-start;
        flex-direction: column;
        padding-right: 2em;
      }
    }
  }

  @media (min-width: 64rem) {
    .footer__card-items {
      padding-right: 5em;
    }
  }
</style>
