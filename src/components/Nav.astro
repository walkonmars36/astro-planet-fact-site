<style>
  .nav-container {
    display: flex;
    flex: 1;
    justify-content: space-between;
    align-items: center;
  }

  li {
    padding: 0 0.5em;
  }
  a {
    text-transform: uppercase;
  }

  .nav__links {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    position: fixed;
    top: 3rem;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: black;
    transform: translateX(-100%);
    transition: transform ease-out 250ms;
  }

  .hamburger {
    color: white;
    font-size: 1.5rem;
  }

  .open {
    transform: translateX(0);
  }

  .no-scroll {
    overflow-y: hidden;
  }

  @media (min-width: 768px) {
    .nav__links {
      position: initial;
      display: flex;
      flex-direction: row;
      flex: 0;
      padding-top: 0;
      transform: translateY(0);
    }

    .hamburger {
      display: none;
    }
  }
</style>
